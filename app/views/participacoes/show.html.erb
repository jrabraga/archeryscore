<% @participacao.series.each_with_index do |serie, index_serie| %>

  <% if primeira_serie_round?(index_serie, @participacao.evento.tipo.qtd_series) %>
    <h4>Round <%= serie.numero_round %></h4>

    <table>
      <thead>
        <tr>
          <th></th>
          <th colspan="3">Arrows</th>
          <th>Hits</th>
          <th>Total</th>
          <th>Valor Acumulado</th>
        </tr>
      </thead>
      <tbody>
    <% end %>
      <tr>
        <td><%= serie.numero %></td>
        <% serie.tiros.order('pontuacao DESC, x DESC').each do |tiro| %>
          <td><%= tiro.valor %></td>
        <% end %>
        <td><%= serie.hits %></td>
        <td><%= serie.total %></td>
        <td><%= serie.acumulado %></td>
      </tr>
     <% if ultima_serie_round?(index_serie, @participacao.evento.tipo.qtd_series) %> 
      </tbody>
    </table>
    <% end %>
<% end %>